<% include partials/header.ejs %>
    
    <div class="container" style="margin-top:100px;">
        <div class="row">
            <div class="col-md-3">
                <p class="lead">
                    pasta
                </p>
                <div class="list-group">
                    <li class="list-group-item active">Info</li>
                    <li class="list-group-item">Info 2</li>
                    <li class="list-group-item">Info 3</li>
    
                </div>
            </div>
            <div class="col-md-9">
                <div class="thumbnail">
                    <img class="img-responsive" style="width:100%" src="<%=hiho.image%>">
                
                    <div class= "caption-full">
                        <h4 class="pull-right" style="color:white;">$<%=hiho.price%></h4>
                            <h1 style="font-size:50px; color:white;">
                                <%= hiho.name %>
                            </h1>
                            <p style="color:white;">
                                <%= hiho.description %>
                                Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec ut aliquam dolor, sed vulputate nisi. Proin sollicitudin suscipit urna at porttitor. Sed sodales ex egestas mauris dignissim ullamcorper. Nullam leo metus, condimentum eget dolor quis, faucibus porttitor urna. 
                            </p>
                            <p style="color:white;">
                                <em> -Submitted By
                                    <%= hiho.author.username %>
                                </em>
                            </p>
                            <% if(currentUser && hiho.author.id.equals(currentUser._id)){%>
                                <a href="/especial/<%=hiho._id%>/edit" class="btn btn-warning"> Edit</a>
                            <form action="/especial/<%=hiho._id%>?_method=DELETE" method="POST" style="display:inline;">
                                <button class = "btn btn-xs btn-danger"
                               >DELETE</button>
                            </form>
                            <%}%>
                    </div>
                
                </div>
                <div class="well">
                    <div class="text-right">
                        <a class="btn btn-success" href="/especial/<%= hiho._id %>/comments/new">
                            Add new comment        
                        </a> 
                    </div>
                    <hr>
                    <% hiho.comments.forEach(function(comm){%>
                            <div class="row">
                                <div class="co-md-12" style="color: white;">
                                    <strong>
                                        <%= comm.author.username %>
                                    </strong>
                                    <span class="pull-right">-10 days ago</span>
                                    <p style="color: white;">
                                        <%= comm.text %>
                                    </p>
                                    <% if(currentUser && comm.author.id.equals(currentUser._id)){%>
                                    <a class="btn btn-xs btn-warning"
                                    href="/especial/<%=hiho._id%>/comments/<%=comm._id%>/edit">
                                        edit
                                    </a>
                        <form action="/especial/<%=hiho.id%>/comments/<%=comm._id%>?_method=DELETE" method="POST" style="display:inline;">
                            <input type="submit" class="btn btn-xs btn-danger" value="Delete" >
                        </form>
                        <% } %>
                                </div>
                            </div>
                    
                    <% }) %>
            
            </div>
            
            </div>
            
            
        </div>
        
       
        
    </div>
    
    

<% include partials/footer.ejs %>
