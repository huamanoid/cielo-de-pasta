<% include partials/header.ejs %>

<div class="container">
    <div class="row">
       
        <div style="width: 35%; margin: 300px auto;">
            <form action="/especial" method="POST">
              
                    <p style="color:white;">
                        Add New Dish
                    </p>
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="number" name="price" placeholder="price" min="0.1" step="0.1">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-danger btn-block">Submit!</button>
                </div>
            </form>
            <a href="/">Go Back</a>
        </div>
    </div>
</div>


